<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00695c"
    tools:context=".MenuPrincipal">

    <ImageButton
        android:id="@+id/chatbot"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:contentDescription="@string/sitesbot"
        android:scaleType="fitEnd"
        android:src="@drawable/agente"
        app:layout_constraintBottom_toTopOf="@+id/vision"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="SITESBOT"
        android:textColor="#d32f2f"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/chatbot"
        app:layout_constraintTop_toTopOf="@+id/chatbot" />

    <ImageButton
        android:id="@+id/vision"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:contentDescription="@string/vision"
        android:scaleType="fitEnd"
        android:src="@drawable/vision"
        app:layout_constraintBottom_toTopOf="@+id/listaMiradores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatbot" />

    <TextView
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="VISION"
        android:textColor="#d32f2f"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/vision"
        app:layout_constraintTop_toTopOf="@+id/vision" />

    <ImageButton
        android:id="@+id/mapa"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:contentDescription="@string/sitesbot"
        android:scaleType="fitEnd"
        android:src="@drawable/mapa1"
        app:layout_constraintBottom_toTopOf="@+id/ayuda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaMiradores"/>


    <TextView
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="MAPA"
        android:textColor="#d32f2f"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/mapa"
        app:layout_constraintTop_toTopOf="@+id/mapa" />

    <ImageButton
        android:id="@+id/listaMiradores"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:contentDescription="@string/sitesbot"
        android:scaleType="fitEnd"
        android:src="@drawable/miradores"
        app:layout_constraintBottom_toTopOf="@+id/mapa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vision"/>


    <TextView
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="MIRADORES"
        android:textColor="#d32f2f"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/listaMiradores"
        app:layout_constraintTop_toTopOf="@+id/listaMiradores" />

    <ImageButton
        android:id="@+id/ayuda"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:background="@color/white"
        android:scaleType="fitEnd"
        android:src="@drawable/informacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapa" />

    <TextView
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="AYUDA"
        android:textColor="#d32f2f"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/ayuda"
        app:layout_constraintTop_toTopOf="@+id/ayuda" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/alhambra"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>