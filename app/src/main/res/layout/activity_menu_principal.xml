<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00695c"
    tools:context=".MenuPrincipal">


    <ImageButton
        android:id="@+id/chatbot"
        android:layout_width="161dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        android:contentDescription="@string/sitesbot"
        android:scaleType="centerInside"
        android:src="@drawable/agente"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaMiradores"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/vision"
        android:layout_width="346dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="25dp"
        android:background="@color/white"
        android:contentDescription="@string/vision"
        android:scaleType="centerInside"
        android:src="@drawable/vision"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mapa"
        android:layout_width="161dp"
        android:layout_height="217dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:background="@color/white"
        android:contentDescription="@string/sitesbot"
        android:scaleType="centerInside"
        android:src="@drawable/mapa1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vision" />

    <ImageButton
        android:id="@+id/listaMiradores"
        android:layout_width="161dp"
        android:layout_height="217dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:contentDescription="@string/sitesbot"
        android:scaleType="centerInside"
        android:src="@drawable/miradores"
        app:layout_constraintEnd_toStartOf="@+id/mapa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vision" />

    <ImageButton
        android:id="@+id/ayuda"
        android:layout_width="161dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="25dp"
        android:background="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/informacion"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/chatbot"
        app:layout_constraintTop_toBottomOf="@+id/mapa"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerInside"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/alhambra"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>