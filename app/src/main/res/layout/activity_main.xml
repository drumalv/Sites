<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sites.MainActivity">




    <TextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="104dp"
        />


    <android.gesture.GestureOverlayView
        android:id="@+id/gOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:eventsInterceptionEnabled="true"
        android:gestureColor="#A8A6A6"
        android:uncertainGestureColor="#EE0024" >

        <TextView
            android:id="@+id/ubicaciones"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="124dp"
            android:text="UbicaciÃ³n" />

        <TextView
            android:id="@+id/zona"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:text="Zona" />
    </android.gesture.GestureOverlayView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/imgCompass"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="1dp"
            android:src="@drawable/brujula"/>

    </LinearLayout>


    <TextView
        android:id="@+id/mirandoa"
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:layout_alignBottom="@+id/texture"
        android:layout_alignParentTop="true"
        android:layout_marginTop="283dp"
        android:layout_marginBottom="17dp"
        android:text="" />

</RelativeLayout>
